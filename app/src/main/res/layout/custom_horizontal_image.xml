<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/imageName"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="fileNAME"
            android:maxLength="25"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:drawableRight="@drawable/ic_visibility_24dp"
            android:drawableEnd="@drawable/ic_visibility_24dp"
            android:layout_margin="10dp"
            android:layout_marginStart="2dp" />
        <ImageView
            android:id="@+id/imgcancel"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/imageName"
            android:layout_toRightOf="@+id/imageName"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_cancel_black_24dp"
            android:layout_toEndOf="@+id/imageName"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/downloadpdf"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="11dp"
            android:visibility="visible"
            android:layout_alignTop="@+id/imgcancel"
            android:background="@drawable/ic_file_download"
            android:gravity="center_vertical"
            android:layout_marginStart="11dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
            <!--android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"-->

    </RelativeLayout>
