<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@drawable/mainbckgrnd">
    <include
        android:id="@+id/icd_tb_homeworkdetails"
        layout="@layout/header_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" />


    <ScrollView
       android:layout_width = "match_parent"
       android:layout_height = "match_parent"
        android:layout_below="@+id/icd_tb_homeworkdetails"
       android:layout_above="@+id/bb_bookavailability"
       tools:ignore = "UselessParent">

       <androidx.cardview.widget.CardView
           android:layout_marginTop="20dp"
           android:layout_width = "match_parent"
           android:layout_height = "wrap_content"
           android:layout_marginStart = "15dp"
           android:layout_marginEnd = "15dp"
           app:cardCornerRadius = "15dp">

           <RelativeLayout
               android:layout_marginTop="15dp"
               android:layout_width = "match_parent"
               android:layout_height = "match_parent"
               android:padding = "8dp">

               <LinearLayout
                   android:id = "@+id/one"
                   android:layout_width = "match_parent"
                   android:layout_height = "wrap_content"
                   android:orientation = "vertical">

                   <LinearLayout
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_margin = "5dp"
                       android:orientation = "horizontal">

                       <TextView
                           android:layout_width = "wrap_content"
                           android:layout_height = "wrap_content"
                           android:text = "*"
                           android:textColor = "@color/Red"
                           android:textSize = "15sp" />


                       <TextView
                           android:layout_width = "match_parent"
                           android:layout_height = "wrap_content"
                           android:gravity = "top"
                           android:text = "@string/what_is_your_mother_s_name"
                           android:textColor = "@color/black"
                           android:textSize = "17sp"
                           android:textStyle = "bold" />
                   </LinearLayout>

                   <EditText
                       android:inputType = "text"
                       android:id = "@+id/edt_motherName"
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:maxLength="100"
                       android:layout_marginStart = "10dp"
                       android:layout_marginEnd = "5dp"
                       android:gravity = "top"
                       android:hint = "@string/what_is_your_mother_s_maiden_name"
                       android:textSize = "17sp"
                       tools:ignore = "Autofill" />
               </LinearLayout>

               <LinearLayout
                   android:id = "@+id/two"
                   android:layout_width = "match_parent"
                   android:layout_height = "wrap_content"
                   android:layout_below = "@id/one"
                   android:layout_marginTop = "20dp"
                   android:orientation = "vertical">

                   <LinearLayout
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_margin = "5dp"
                       android:orientation = "horizontal">

                       <TextView
                           android:layout_width = "wrap_content"
                           android:layout_height = "wrap_content"
                           android:text = "*"
                           android:textColor = "@color/Red"
                           android:textSize = "15sp" />

                       <TextView
                           android:layout_width = "match_parent"
                           android:layout_height = "wrap_content"
                           android:gravity = "top"
                           android:text = "@string/current_password"
                           android:textColor = "@color/black"
                           android:textSize = "17sp"
                           android:textStyle = "bold" />

                   </LinearLayout>

                   <EditText
                       android:inputType = "textPassword"
                       android:id = "@+id/edt_currentPwd"
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_marginStart = "10dp"
                       android:layout_marginEnd = "5dp"
                       android:gravity = "top"
                       android:hint = "@string/current_password"
                       android:textSize = "17sp"
                       android:maxLength = "20"
                       tools:ignore = "Autofill" />
               </LinearLayout>

               <LinearLayout
                   android:id = "@+id/three"
                   android:layout_width = "match_parent"
                   android:layout_height = "wrap_content"
                   android:layout_below = "@id/two"
                   android:layout_marginTop = "20dp"
                   android:orientation = "vertical">

                   <LinearLayout
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_margin = "5dp"
                       android:orientation = "horizontal">

                       <TextView
                           android:layout_width = "wrap_content"
                           android:layout_height = "wrap_content"
                           android:text = "*"
                           android:textColor = "@color/Red"
                           android:textSize = "15sp" />

                       <TextView
                           android:layout_width = "match_parent"
                           android:layout_height = "wrap_content"
                           android:gravity = "top"
                           android:text = "@string/new_password"
                           android:textColor = "@color/black"
                           android:textSize = "17sp"
                           android:textStyle = "bold" />
                   </LinearLayout>

                   <EditText
                       android:inputType = "textPassword"
                       android:id = "@+id/edt_newPwd"
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_marginStart = "10dp"
                       android:layout_marginEnd = "5dp"
                       android:gravity = "top"
                       android:maxLength="20"
                       android:hint = "@string/new_password"
                       android:textSize = "17sp"
                       tools:ignore = "Autofill" />

                   <TextView
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_marginStart = "19dp"
                       android:layout_marginEnd = "5dp"
                       android:text = "@string/password_can_be_8_to_20_characters_long_must_contain_a_number_and_a_special_character_like_amp">

                   </TextView>
               </LinearLayout>

               <LinearLayout
                   android:id = "@+id/four"
                   android:layout_width = "match_parent"
                   android:layout_height = "wrap_content"
                   android:layout_below = "@id/three"
                   android:layout_marginTop = "20dp"
                   android:orientation = "vertical">

                   <LinearLayout
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_margin = "5dp"
                       android:orientation = "horizontal">

                       <TextView
                           android:layout_width = "wrap_content"
                           android:layout_height = "wrap_content"
                           android:text = "*"
                           android:textColor = "@color/Red"
                           android:textSize = "15sp" />

                       <TextView
                           android:layout_width = "match_parent"
                           android:layout_height = "wrap_content"
                           android:gravity = "top"
                           android:text = "@string/re_enter_new_password"
                           android:textColor = "@color/black"
                           android:textSize = "17sp"
                           android:textStyle = "bold"
                           />

                   </LinearLayout>

                   <EditText
                       android:inputType = "textPassword"
                       android:id = "@+id/edt_renewPwd"
                       android:layout_width = "match_parent"
                       android:layout_height = "wrap_content"
                       android:layout_marginStart = "10dp"
                       android:layout_marginEnd = "5dp"
                       android:gravity = "top"
                       android:maxLength="20"
                       android:hint = "@string/re_enter_new_password"
                       android:textSize = "17sp"
                       tools:ignore = "Autofill" />
               </LinearLayout>

               <LinearLayout
                   android:id = "@+id/five"
                   android:layout_width = "match_parent"
                   android:layout_height = "wrap_content"
                   android:layout_below = "@id/four"
                   android:layout_gravity = "center"
                   android:layout_marginTop = "25dp"
                   android:layout_marginBottom = "20dp"
                   android:gravity = "center"
                   android:orientation = "horizontal">

                   <Button
                       android:id = "@+id/btn_updatePwd"
                       android:layout_width = "120dp"
                       android:layout_height = "wrap_content"
                       android:layout_margin = "10dp"
                       android:background = "@drawable/button_new1"
                       android:paddingLeft = "15dp"
                       android:paddingRight = "15dp"
                       android:text = "Update"
                       android:textColor = "#ffffff" />

               </LinearLayout>
           </RelativeLayout>
       </androidx.cardview.widget.CardView>

   </ScrollView>

    <include
        android:id="@+id/bb_bookavailability"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
