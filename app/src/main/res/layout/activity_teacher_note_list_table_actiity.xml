<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_note_list_table_actiity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.aceventura.evolvuschool.teacherapp.activities.TeacherNoteListTableACtiity">


    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="SRNO"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Date"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Class"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Subject"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="  Edit / View  "
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Delete"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="#616161"
                            android:gravity="center"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:text="Publish"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                    </TableRow>


                </TableLayout>


            </LinearLayout>

            <ListView
                android:id="@+id/timetable_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/leftroundborder"
                android:dividerHeight="0dp" />


        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>
