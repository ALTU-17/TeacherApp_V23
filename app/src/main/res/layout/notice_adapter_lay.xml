<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:padding="1pt"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="5pt"
        >

        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noticetype"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Notice"
                    android:textColor="#CB2447"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  |"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#C7C1C3"
                    />

                <TextView
                    android:id="@+id/tvnew1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:typeface="sans"
                    android:textColor="#000000"                     />

                <TextView
                    android:id="@+id/classnoticcenm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:text="1A"
                    android:textSize="13sp"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  |"
                    android:textSize="13sp"
                    android:textColor="#C7C1C3"
                    android:fontFamily="sans-serif"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/tvdate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Date: "
                        android:visibility="gone"
                        android:typeface="sans"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/notice_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:typeface="sans"                                android:padding="1dp"
                        android:text="DD/MM/YYYY"
                        android:textColor="#7183B9"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submission Date:" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/line2"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line"/>

            <!-- <TextView
                 android:id="@+id/noticetype"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="3dp"
                 android:text="Notice "
                 android:textColor="#000000"
                 android:textSize="17sp" />

             <TextView
                 android:id="@+id/subject_notice"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1.9"
                 android:text="description for parent from teacher / Principal "
                 android:textSize="15sp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >

          <!--  <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="12/02/2018"
                android:layout_weight="1"
                />

-->
            <TextView
                android:typeface="sans"
                android:textColor="#000000"                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="Subject: "
                />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/subject_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="description for parent from teacher / Principal "
                android:textSize="15sp"
                android:maxLength="40"
                android:maxLines="1"/>
        </LinearLayout>
            <View
                android:id="@+id/line3"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created By : "
                    android:typeface="sans"
                    android:textColor="#000000"
                    android:visibility="visible"
                    />


                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/notice_createdby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preeti Dhakane"
                    android:visibility="visible"
                    />
            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>