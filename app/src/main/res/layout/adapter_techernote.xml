<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_margin = "5dp"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical">


        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "3dp"
            android:background = "@drawable/cardshape"
            android:orientation = "vertical">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "0dp"
                android:layout_marginBottom = "3dp"
                android:layout_weight = "3"
                android:orientation = "horizontal">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "5dp"
                    android:layout_marginBottom = "2dp"
                    android:orientation = "horizontal">

                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:layout_marginStart = "1dp"
                        android:text = "Class : "
                        android:textStyle = "bold"
                        android:typeface = "sans" />

                    <TextView
                        android:id = "@+id/note_class"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "1A"
                        android:typeface = "sans" />


                    <TextView
                        android:id = "@+id/vetical3"
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:fontFamily = "sans-serif"
                        android:text = " | "
                        android:textColor = "#C7C1C3"
                        android:textSize = "13sp" />


                    <TextView
                        android:id = "@+id/note_subject"
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:text = "English"
                        android:textColor = "#CB2447"
                        android:textStyle = "bold"
                        android:typeface = "sans" />

                    <TextView
                        android:id = "@+id/vetical1"
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:fontFamily = "sans-serif"
                        android:text = " | "
                        android:textColor = "#C7C1C3"
                        android:textSize = "13sp" />


                    <TextView
                        android:id = "@+id/tvpub"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_marginLeft = "1dp"
                        android:text = "Published On : "
                        android:textStyle = "bold"
                        android:typeface = "sans"
                        android:visibility = "gone" />

                    <TextView
                        android:id = "@+id/tvcdate"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_marginLeft = "1dp"
                        android:text = "Created On: "
                        android:textStyle = "bold"
                        android:typeface = "sans"
                        android:visibility = "gone" />

                    <TextView
                        android:id = "@+id/note_edate"
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:text = "15-08-2019"
                        android:textColor = "#7183B9"
                        android:typeface = "sans" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:id = "@+id/lineview"
                android:layout_width = "match_parent"
                android:layout_height = "0.5dp"
                android:background = "@drawable/line" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "3dp"
                android:orientation = "horizontal">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginLeft = "5dp"
                    android:orientation = "horizontal">

                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "1dp"
                        android:layout_marginLeft = "1dp"
                        android:text = "Description : "
                        android:textStyle = "bold"

                        android:typeface = "sans"
                        tools:ignore = "RtlHardcoded" />

                    <TextView
                        android:id = "@+id/note_tdesc"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:ellipsize = "end"
                        android:maxLength = "50"
                        android:maxLines = "1"
                        android:text = "decription comes here"
                        android:typeface = "sans" />
