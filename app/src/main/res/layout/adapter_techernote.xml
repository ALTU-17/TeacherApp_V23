                                               android:id="@+id/note_class"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:text="1A"
                                               />
                   -->
                </LinearLayout>


            </LinearLayout>

            <View
                android:id = "@+id/lineview6"
                android:layout_width = "match_parent"
                android:layout_height = "0.5dp"
                android:background = "@drawable/line" />

            <LinearLayout
                android:id = "@+id/teacherlayout"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_margin = "3dp"
                android:orientation = "horizontal"
                android:visibility = "visible">

                <LinearLayout
                    android:id = "@+id/threedots"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content">

                    <ImageView
                        android:id = "@+id/fabaddnote"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_gravity = "center"
                        android:layout_margin = "5pt"
                        android:background = "@drawable/moreoptions" />


                </LinearLayout>

                <!--Publish Icon-->
                <LinearLayout
                    android:layout_width = "50dp"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "center"
                    android:layout_marginStart = "10dp"
                    android:layout_marginLeft = "10dp"
                    android:gravity = "center">

                    <ImageView
                        android:id = "@+id/fabpublishnote"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_gravity = "center"
                        android:layout_margin = "5dp"
                        android:layout_marginEnd = "5dp"
                        android:layout_marginRight = "5dp"
                        android:background = "@drawable/ic_done_blue"
                        android:visibility = "gone" />
                </LinearLayout>

                <!--Delete Icon-->
                <LinearLayout
                    android:layout_width = "50dp"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "center"
                    android:layout_marginStart = "10dp"
                    android:layout_marginLeft = "10dp"
                    android:gravity = "center">

                    <ImageView
                        android:id = "@+id/fabdeletenote"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_gravity = "center"
                        android:background = "@drawable/ic_delete_gray"
                        android:visibility = "gone" />
                </LinearLayout>

                <!--Edit Icon-->
                <LinearLayout
                    android:layout_width = "50dp"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "center"
                    android:layout_marginLeft = "10dp"
                    android:gravity = "center">

                    <ImageView
                        android:id = "@+id/fabeditnote"
                        android:layout_width = "20dp"
                        android:layout_height = "20dp"
                        android:layout_marginLeft = "20dp"
                        android:background = "@drawable/ic_edit_24dp"
                        android:visibility = "gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                android:orientation = "horizontal">

                <ImageView
                    android:id = "@+id/fabviewnote"
                    android:layout_width = "25dp"
                    android:layout_height = "25dp"
                    android:layout_margin = "3dp"
                    android:layout_marginEnd = "10dp"
                    android:background = "@drawable/ic_visibility_24dp"
                    android:visibility = "gone" />

                <ImageView
                    android:id = "@+id/viewdBy"
                    android:layout_width = "20dp"
                    android:layout_height = "20dp"
                    android:layout_margin = "3dp"
                    android:layout_marginStart = "10dp"
                    android:src = "@drawable/ic_user_book_reader_solid"
                    android:visibility = "gone" />
            </LinearLayout>

            <TextView
                android:id = "@+id/txtviewpublish"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Published "
                android:textColor = "@color/orange"
                android:visibility = "gone" />


            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "5dp"
                android:orientation = "horizontal"
                android:visibility = "gone">

                <Button
                    android:layout_width = "20dp"
                    android:layout_height = "20dp"
                    android:layout_gravity = "center"
                    android:layout_marginStart = "10dp"
                    android:layout_marginLeft = "10dp" />

                <Button
                    android:layout_width = "20dp"
                    android:layout_height = "20dp"
                    android:layout_gravity = "center"
                    android:layout_marginStart = "30dp"
                    android:layout_marginLeft = "30dp"
                    android:visibility = "visible" />

                <Button
                    android:layout_width = "20dp"
                    android:layout_height = "20dp"
                    android:layout_gravity = "center"
                    android:layout_marginStart = "30dp"
                    android:layout_marginLeft = "30dp"
                    android:visibility = "gone" />

                <Button
                    android:layout_width = "20dp"
                    android:layout_height = "20dp"
                    android:layout_gravity = "center"
                    android:layout_marginStart = "30dp"
                    android:layout_marginLeft = "30dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>