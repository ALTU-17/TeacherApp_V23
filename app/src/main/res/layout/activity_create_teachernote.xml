                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Add Notes" />
                            </LinearLayout>

                            <!--Attachment Button-->
                            <LinearLayout
