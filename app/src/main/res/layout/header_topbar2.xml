<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/newtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/drawer"
            android:layout_alignRight="@+id/notify"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/school_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spensans_regular"
                android:text="EvolvU Smart Parent App"
                android:textColor="@color/md_white_1000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_academic_yr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/spensans_regular"
                android:text="academic yr"
                android:textColor="@color/md_white_1000"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/drawer"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hamburger" />

        <ImageButton
            android:id="@+id/notify"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/notify"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:background="@drawable/back_arrow_white"
            android:gravity="start" />

        <TextView
            android:id="@+id/ht_Teachernote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:text="Activity"
            android:textColor="@color/md_white_1000"
            android:textSize="16dp"
            android:textStyle="bold" />

        
</LinearLayout>
</LinearLayout>