<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@drawable/mainbckgrnd"
    android:orientation = "vertical">

    <include
        android:id="@+id/icd_tb_homeworkdetails"
        layout="@layout/header_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:id = "@+id/label1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "5pt"
        android:background = "@drawable/createremark"
        android:visibility = "gone" />


    <androidx.cardview.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_gravity = "center"
        android:layout_margin = "5pt"
        android:layout_below="@+id/icd_tb_homeworkdetails"
        android:layout_above="@+id/bb_bookavailability"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius = "15dp">

        <ScrollView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "vertical">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:orientation = "vertical">

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:orientation = "vertical"
                        android:weightSum = "2">

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_margin = "9dp"
                            android:orientation = "vertical"
                            android:weightSum = "2">

                            <RelativeLayout
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_margin = "5dp"
                                android:layout_weight = "1"
                                android:orientation = "horizontal">

                                <TextView
                                    android:id = "@+id/m1"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginTop = "10dp"
                                    android:layout_marginBottom = "2dp"
                                    android:text = "*"
                                    android:textColor = "@color/Red"
                                    android:textSize = "15sp" />

                                <LinearLayout
                                    android:id = "@+id/selectClass"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginTop = "5dp"
                                    android:layout_toEndOf = "@+id/m1"
                                    android:orientation = "horizontal">

                                    <TextView
                                        android:layout_width = "match_parent"
                                        android:layout_height = "wrap_content"
                                        android:layout_marginTop = "5dp"
                                        android:text = "Class"
                                        android:textColor = "#000"
                                        android:textSize = "15sp" />

                                </LinearLayout>

                                <Spinner
                                    android:id = "@+id/classSpinremk"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "30dp"
                                    android:layout_below = "@+id/selectClass"
                                    android:layout_gravity = "center"
                                    android:layout_marginStart = "10dp"
                                    android:gravity = "center">

                                </Spinner>

                                <View
                                    android:layout_width = "match_parent"
                                    android:layout_height = "1dp"
                                    android:layout_below = "@id/classSpinremk"
                                    android:layout_alignStart = "@+id/classSpinremk"
                                    android:layout_alignParentEnd = "@+id/classSpinremk"
                                    android:background = "@drawable/line" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_margin = "5dp"
                                android:layout_weight = "1"
                                android:orientation = "horizontal">

                                <TextView
                                    android:id = "@+id/man2"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginTop = "10dp"
                                    android:layout_marginBottom = "2dp"
                                    android:text = "*"
                                    android:textColor = "@color/Red"
                                    android:textSize = "15sp"
                                    android:visibility = "invisible" />

                                <LinearLayout
                                    android:id = "@+id/selectSub"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginTop = "5dp"
                                    android:layout_toEndOf = "@+id/man2"
                                    android:orientation = "horizontal">

                                    <TextView
                                        android:layout_width = "match_parent"
                                        android:layout_height = "wrap_content"
                                        android:layout_marginTop = "5dp"
                                        android:text = "Subject"
                                        android:textColor = "#000"
                                        android:textSize = "15sp" />

                                </LinearLayout>

                                <Spinner
                                    android:id = "@+id/subjectSpinrmk"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "30dp"
                                    android:layout_below = "@+id/selectSub"
                                    android:layout_gravity = "center"
                                    android:layout_marginStart = "10dp"
                                    android:gravity = "center">

                                </Spinner>

                                <View
                                    android:layout_width = "match_parent"
                                    android:layout_height = "1dp"
                                    android:layout_below = "@id/subjectSpinrmk"
                                    android:layout_alignStart = "@+id/subjectSpinrmk"
                                    android:layout_alignParentEnd = "@+id/subjectSpinrmk"
                                    android:background = "@drawable/line" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_margin = "5dp"
                            android:orientation = "horizontal"
                            android:weightSum = "2">

                            <TextView
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "10dp"
                                android:text = "*"
                                android:textColor = "#ff0000" />

                            <TextView
                                android:id = "@+id/txtselectstudrmk"
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:text = "Student"
                                android:textColor = "#000" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginStart = "12dp"
                            android:layout_marginEnd = "13dp"
                            android:layout_marginBottom = "3dp">


                            <!--<Spinner
                                android:id = "@+id/studSpinrmk"
                                android:layout_width = "match_parent"
                                android:layout_height = "30dp"
                                android:layout_margin = "7dp"
                                android:layout_marginStart = "10dp"
                                android:layout_marginEnd = "5dp" />-->

                            <TextView
                                android:id = "@+id/studSpinrmk"
                                android:layout_width = "match_parent"
                                android:layout_height = "30dp"
                                android:layout_margin = "7dp"
                                android:layout_marginStart = "10dp"
                                android:layout_marginEnd = "5dp"
                                android:gravity = "center_vertical"
                                android:text = "Select Student" />

                            <View
                                android:layout_width = "match_parent"
                                android:layout_height = "1dp"
                                android:layout_below = "@id/studSpinrmk"
                                android:layout_alignStart = "@+id/studSpinrmk"
                                android:layout_alignParentEnd = "@+id/studSpinrmk"
                                android:background = "@drawable/line" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_margin = "5dp"
                            android:orientation = "horizontal">

                            <TextView
                                android:id = "@+id/textView4"
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "10dp"
                                android:text = "*"
                                android:textColor = "#ff0000" />

                            <TextView
                                android:id = "@+id/txtselectsubofrmk"
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:text = "Subject of Remark"
                                android:textColor = "#000" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginStart = "17dp"
                            android:layout_marginEnd = "10dp">

                            <EditText
                                android:id = "@+id/subrmk"
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_margin = "5dp"
                                android:hint = "Type here..."
                                android:maxLength = "100"
                                android:textSize = "15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_margin = "5dp"
                            android:orientation = "vertical"
                            android:visibility = "gone">

                            <LinearLayout
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_marginTop = "16dp"
                                android:orientation = "horizontal">

                                <TextView
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:text = "*"
                                    android:textColor = "#ff0000"
                                    android:visibility = "visible" />

                                <TextView
                                    android:id = "@+id/datepick"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginStart = "5dp"
                                    android:layout_marginBottom = "2dp"
                                    android:drawableEnd = "@drawable/ic_date_range_black_24dp"
                                    android:text = "Date"
                                    android:textSize = "15sp" />

                                <EditText
                                    android:id = "@+id/date"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginStart = "20dp"
                                    android:background = "#fff"
                                    android:focusable = "false"
                                    android:inputType = "textMultiLine"
                                    android:scrollbars = "vertical"
                                    android:textColor = "#2f858f"
                                    android:textSize = "15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_margin = "5dp"
                            android:layout_marginTop = "6dp"
                            android:layout_marginBottom = "10dp"
                            android:orientation = "vertical">

                            <LinearLayout
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:orientation = "horizontal">

                                <TextView
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginStart = "10dp"
                                    android:text = "*"
                                    android:textColor = "#ff0000"
                                    android:visibility = "visible" />

                                <TextView
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginStart = "5dp"
                                    android:layout_marginBottom = "2dp"
                                    android:text = "Remark"
                                    android:textColor = "#000"
                                    android:textSize = "15sp"
                                    android:visibility = "visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "10dp"
                                android:layout_marginEnd = "5dp">

                                <EditText
                                    android:id = "@+id/edtrmk"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_margin = "7dp"
                                    android:layout_marginTop = "10dp"
                                    android:layout_marginEnd = "5dp"
                                    android:gravity = "top"
                                    android:hint = "Type here..."
                                    android:maxLength = "500"
                                    android:textSize = "15sp">

                                </EditText>


                            </LinearLayout>

                            <ProgressBar
                                android:id = "@+id/progressBar"
                                android:layout_width = "50dp"
                                android:layout_height = "50dp"
                                android:layout_gravity = "center" />

                        </LinearLayout>


                        <!--Observation CheckBox-->
                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:visibility = "visible">

                            <CheckBox
                                android:id = "@+id/chkCreateObservation"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "10dp"
                                android:layout_marginTop = "5dp"
                                android:layout_marginBottom = "10dp"
                                android:text = "Observation" />

                        </LinearLayout>


                        <!--Attachments-->
                        <LinearLayout
                            android:id = "@+id/pickphoto"
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginLeft = "15dp"
                            android:layout_marginRight = "15dp"
                            android:gravity = "center"
                            android:orientation = "vertical"
                            android:visibility = "visible">

                            <TextView
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "5dp"
                                android:drawableEnd = "@drawable/ic_attach"
                                android:text = "Attach Document"
                                android:textColor = "@color/black"
                                android:textSize = "15sp"
                                android:visibility = "visible" />

                            <View
                                android:layout_width = "match_parent"
                                android:layout_height = "0.5dp"
                                android:layout_marginTop = "1dp"
                                android:layout_marginBottom = "1dp"
                                android:background = "@drawable/line" />

                            <!--<EditText
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:hint="Upload file"
                                android:focusable="false"
                                android:textSize="15sp"
                                android:drawablePadding="2dp"
                                android:drawableEnd="@drawable/ic_attach"/>

                            <Button
                                android:visibility="gone"
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_new1"
                                android:padding="5dp"
                                android:text="Select Notes"
                                android:textColor="#fff"
                                android:textSize="13sp" />-->

                            <!--Listing of attachments-->
                            <ScrollView

                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_margin = "2dp"
                                android:visibility = "visible">

                                <LinearLayout
                                    android:id = "@+id/micici_listView"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginStart = "15dp"
                                    android:layout_marginEnd = "5dp"
                                    android:orientation = "vertical">

                                </LinearLayout>
                            </ScrollView>

                            <ScrollView
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_margin = "2dp">

                                <LinearLayout
                                    android:id = "@+id/micici_listViewpdf"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_marginStart = "15dp"
                                    android:layout_marginEnd = "5dp"
                                    android:orientation = "vertical">

                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>


                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Add Notes" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_image"
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:visibility="gone" />
                        </LinearLayout>-->


                        <!--Buttons-->
                        <LinearLayout
                            android:layout_width = "wrap_content"
                            android:layout_height = "60dp"
                            android:layout_gravity = "center"
                            android:layout_margin = "3pt"
                            android:layout_marginTop = "30dp"
                            android:layout_marginBottom = "20dp"
                            android:gravity = "center"
                            android:orientation = "horizontal"
                            android:weightSum = "2">

                            <Button
                                android:id = "@+id/btnsavermk"
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "1"
                                android:background = "@drawable/save" />

                            <Button
                                android:id = "@+id/btnResetrmk"
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_weight = "1"
                                android:background = "@drawable/reset" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id = "@+id/manageLayout"
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:orientation = "vertical"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


    <include
        android:id="@+id/bb_bookavailability"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>

