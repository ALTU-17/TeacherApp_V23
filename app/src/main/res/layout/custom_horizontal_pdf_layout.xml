<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2pt"
    android:layout_marginRight="2pt"
    android:layout_marginLeft="2pt"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/txtimagenamedisplay"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/filename_pdf"
            android:drawableEnd="@drawable/ic_file_download"
            android:drawableRight="@drawable/ic_file_download"
            android:gravity="center_vertical"
            android:drawablePadding="2dp"

            />

        <Button
            android:id="@+id/imgdwndpdf"
            android:layout_width="25dp"
            android:layout_margin="2dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_file_download"
            android:gravity="center"
            android:visibility="gone" />

</LinearLayout>