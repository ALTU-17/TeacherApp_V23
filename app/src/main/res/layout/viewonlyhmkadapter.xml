<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/cardshape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="1dp"
                        android:text="Class: "
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/viewonlyhmkclass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1A"

                        />

                    <TextView
                        android:id="@+id/vetical1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="  |  "
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#C7C1C3"
                        />
                    <TextView
                        android:id="@+id/viewonlyhmksub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textStyle="bold"

                        android:textColor="#CB2447" />

                    <TextView
                        android:id="@+id/vetical5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" | "
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:textColor="#C7C1C3"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published Date: "
                        android:visibility="gone"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/viewonlyhmkassigndate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="1A"
                        android:textColor="#7585ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Homework"
            android:textColor="#7585ff" />


    </LinearLayout>
                <View
                    android:id="@+id/lineview1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/line"/>

<!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created On : "
                        android:textColor="#000000"
                        />
                <TextView
                    android:id="@+id/viewonlyhmkassigndate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
                </LinearLayout>
-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Submit On: "
                        android:textStyle="bold"
                        />
                <TextView
                    android:id="@+id/viewonlyhmksubmitdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/lineview"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

        <ImageView
        android:id="@+id/viewhmkonly"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_visibility_24dp"
        android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>